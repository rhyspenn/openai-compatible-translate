{
    "identifier": "com.rhyspenn.openai-compatible-translate",
    "version": "2.0.0",
    "category": "translate",
    "name": "OpenAI Compatible 翻译",
    "summary": "支持任何 OpenAI 兼容 API 的高质量文本翻译插件",
    "icon": "",
    "author": "Rhys",
    "homepage": "https://github.com/rhyspenn/openai-compatible-translate",
    "appcast": "https://raw.githubusercontent.com/rhyspenn/openai-compatible-translate/main/appcast.json",
    "minBobVersion": "0.5.0",
    "options": [
        {
            "identifier": "baseUrl",
            "type": "text",
            "title": "API Base URL",
            "desc": "OpenAI API 基础地址，如：https://api.openai.com/v1 或其他兼容服务的地址",
            "textConfig": {
                "type": "normal",
                "height": 20,
                "placeholder": "https://api.openai.com/v1"
            }
        },
        {
            "identifier": "apiKey",
            "type": "text",
            "title": "API Key",
            "desc": "请输入您的 API 密钥",
            "textConfig": {
                "type": "secure",
                "height": 20
            }
        },
        {
            "identifier": "model",
            "type": "text",
            "title": "模型名称",
            "desc": "输入要使用的模型名称，如：gpt-4.1、gpt-4、gpt-3.5-turbo 等",
            "textConfig": {
                "type": "normal",
                "height": 20,
                "placeholder": "gpt-4.1"
            }
        },
        {
            "identifier": "temperature",
            "type": "text",
            "title": "Temperature (可选)",
            "desc": "控制输出随机性，范围 0-2，默认 0.1，值越小翻译越精确",
            "textConfig": {
                "type": "normal",
                "height": 20,
                "placeholder": "0.1"
            }
        },
        {
            "identifier": "maxTokens",
            "type": "text",
            "title": "Max Tokens (可选)",
            "desc": "最大返回 token 数，留空则自动计算",
            "textConfig": {
                "type": "normal",
                "height": 20,
                "placeholder": "自动"
            }
        }
    ]
}